{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "State-wise Breakdown of Migration (Percentage of Total) Across Malaysian States (2020-2024)",
    "height": 400,
    "data": {
      "url": "https://raw.githubusercontent.com/drewpri411/FIT3179_Visualisation_2/main/js/malaysia-states.topojson",
      "format": {"type": "csv"}
    },
    "transform": [
      {
        "lookup": "properties.Name",
        "from": {
          "data": {
            "url": "https://raw.githubusercontent.com/drewpri411/FIT3179_Visualisation_2/main/data/Normalized_Migration_Data_with_2020_Population_and_State_Breakdown.csv",
            "format": {"type": "csv"}
          },
          "key": "soe",
          "fields": ["year", "state_percentage_of_total"]
        },
        "as": ["year_data", "state_percentage_of_total"]
      },
      {
        "filter": "datum.year_data == year"
      },
      {
        "calculate": "datum.state_percentage_of_total ? datum.state_percentage_of_total : 0",
        "as": "StateMigrationPercentage"
      }
    ],
    "params": [
      {
        "name": "year",
        "value": 2020,
        "bind": {
          "input": "range",
          "min": 2020,
          "max": 2024,
          "step": 1,
          "name": "Year: "
        }
      }
    ],
    "projection": {
      "type": "equalEarth"
    },
    "mark": "geoshape",
    "encoding": {
      "color": {
        "field": "StateMigrationPercentage",
        "type": "quantitative",
        "scale": {
          "type": "linear",
          "domain": [0, 10, 20, 30, 40, 50],
          "range": ["#ffffb2", "#fecc5c", "#fd8d3c", "#f03b20", "#bd0026"]
        },
        "legend": {
          "title": "State Contribution to Total Migration (%)"
        }
      },
      "tooltip": [
        {"field": "properties.Name", "type": "nominal", "title": "State"},
        {
          "field": "StateMigrationPercentage",
          "type": "quantitative",
          "title": "Percentage of Total Migration (%)",
          "format": ".2f"
        }
      ]
    }
  }
  