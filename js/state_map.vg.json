{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "State-wise Breakdown of Migration (Percentage of Total) Across Malaysian States (2020-2024)",
    "width": "container",
    "height": 400,
    "data": {
      "url": "https://raw.githubusercontent.com/drewpri411/FIT3179_Visualisation_2/main/js/malaysia-states.topojson",
      "format": {"type": "topojson", "feature": "states"}
    },
    "transform": [
      {
        "lookup": "properties.Name",
        "from": {
          "data": {
            "url": "https://raw.githubusercontent.com/drewpri411/FIT3179_Visualisation_2/main/data/Normalized_Migration_Data_with_2020_Population_and_State_Breakdown.csv",
            "format": {"type": "csv"}
          },
          "key": "soe",
          "fields": ["year", "state_percentage_of_total"]
        },
        "as": ["year", "state_percentage_of_total"]
      },
      {
        "filter": "datum.year == year"
      }
    ],
    "params": [
      {
        "name": "year",
        "value": 2020,
        "bind": {
          "input": "range",
          "min": 2020,
          "max": 2024,
          "step": 1,
          "name": "Year: "
        }
      }
    ],
    "projection": {
      "type": "equalEarth"
    },
    "mark": "geoshape",
    "encoding": {
      "color": {
        "field": "state_percentage_of_total",
        "type": "quantitative",
        "legend": {
          "title": "Total Migration (%)"
        }
      },
      "tooltip": [
        {"field": "properties.Name", "type": "nominal", "title": "State"},
        {
          "field": "state_percentage_of_total",
          "type": "quantitative",
          "title": "Percentage of Total Migration (%)",
          "format": ".2f"
        }
      ]
    }
  }
  