{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "State-wise Breakdown of Migration (Percentage of Total) Across Malaysian States (2020-2024)",
    "anchor": "start",
    "fontSize": 16
  },
  "width": "container",
  "height": 400,
  "padding": {"left": 10, "top": 10, "right": 50, "bottom": 50},  
  "params": [
    {
      "name": "year_selection",
      "value": 2020,
      "bind": {
        "input": "range",
        "min": 2020,
        "max": 2024,
        "step": 1,
        "name": "Year: "
      }
    }
  ],
  "projection": {
    "type": "equalEarth"
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/drewpri411/FIT3179_Visualisation_2/main/js/malaysia-states.topojson",
        "format": {"type": "topojson", "feature": "states"}
      },
      "transform": [
        {
          "calculate": "'No migration data available for ' + datum.properties.Name",
          "as": "note"
        }
      ],
      "mark": {
        "type": "geoshape",
        "fill": "#ddd",
        "stroke": "white",
        "strokeWidth": 1
      },
      "encoding": {
        "tooltip": {"field": "note"}
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/drewpri411/FIT3179_Visualisation_2/main/js/malaysia-states.topojson",
        "format": {"type": "topojson", "feature": "states"}
      },
      "transform": [
        {
          "lookup": "id",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/drewpri411/FIT3179_Visualisation_2/main/data/Pivoted_Migration_Data.csv",
              "format": {"type": "csv"}
            },
            "key": "state",
            "fields": ["2020", "2021", "2022", "2023", "2024"]
          }
        },
        {
          "calculate": "datum[year_selection]",
          "as": "state_percentage_of_total"
        }
      ],
      "mark": {
        "type": "geoshape",
        "stroke": "#fff",
        "strokeWidth": 0.5
      },
      "encoding": {
        "color": {
          "field": "state_percentage_of_total",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [0.1, 2.5, 10, 25, 50, 75],
            "range": ["#d0e1f9", "#74add1", "#4575b4", "#313695", "#253494", "#0c2c84"]
          },
          "legend": {
            "title": "Total Migration (%)",
            "orient": "right",
            "offset": 10,
            "direction": "vertical",
            "labelLimit": 100  
          }
        },
        "tooltip": [
          {"field": "properties.Name", "type": "nominal", "title": "State"},
          {
            "field": "state_percentage_of_total",
            "type": "quantitative",
            "title": "Percentage of Total Migration (%)",
            "format": ".4f"
          }
        ]
      }
    }
  ]
}
