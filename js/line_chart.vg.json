{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Migration Arrivals by Continent and Country",
    "anchor": "start",
    "fontSize": 16,
    "font": "Roboto"
  },
  "padding": {"left": 10, "top": 10, "right": 50, "bottom": 50}, 
  "width": "container",
  "height": 400,
  "data": {
    "url": "data/continent_arrivals_data_line_chart.csv",
    "format": {
      "type": "csv"
    }
  },
  "params": [
    {
      "name": "Continent_selection",
      "bind": {
        "input": "select",
        "options": ["Asia", "Europe", "Africa", "North America", "South America", "Oceania"],
        "labels": ["Asia", "Europe", "Africa", "North America", "South America", "Oceania"],
        "name": "Continent Selection: "
      },
      "value": "Asia"
    },
    {
      "name": "Year_selection",
      "bind": {
        "input": "range",
        "min": 2020,
        "max": 2024,
        "step": 1,
        "name": "Select Year: "
      },
      "value": 2020
    }
  ],
  "transform": [
    {
      "filter": "Continent_selection == null || datum.continent == Continent_selection"
    },
    {
      "calculate": "datum.year",
      "as": "Year"
    },
    {
      "filter": "datum.Year == Year_selection"
    },
    {
      "calculate": "datum.monthly_total == null ? 0 : datum.monthly_total",
      "as": "Monthly_Arrivals"
    }
  ],
  "layer": [
    {
      "mark": {
        "type": "line",
        "point": true,
        "interpolate": "monotone"
      },
      "encoding": {
        "x": {
          "field": "month",
          "type": "ordinal",
          "title": "Month",
          "sort": ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"]
        },
        "y": {
          "field": "Monthly_Arrivals",
          "type": "quantitative",
          "title": "Monthly Arrivals",
          "axis": { "tickCount": 7 },
          "scale": {
            "type": "log",
            "domain": [1, 10000000],
            "clamp": true
          }
        },
        "color": {
          "field": "country_name",
          "type": "nominal",
          "title": "Country",
          "scale": {
            "range": ["#E69F00", "#56B4E9", "#0072B2", "#F0E442", "#D55E00", "#CC79A7", "#999999", "#000000", "#4B0082", "#FF69B4"]
          }
        },
        "tooltip": [
          {
            "field": "country_name",
            "type": "nominal",
            "title": "Country"
          },
          {
            "field": "month",
            "type": "ordinal",
            "title": "Month"
          },
          {
            "field": "Monthly_Arrivals",
            "type": "quantitative",
            "title": "Monthly Arrivals"
          }
        ]
      }
    },
    {
      "transform": [
        {
          "filter": "Year_selection == 2020"
        }
      ],
      "mark": {
        "type": "rule",
        "color": "red",
        "strokeWidth": 2
      },
      "encoding": {
        "x": {
          "datum": "April",
          "type": "ordinal"
        }
      }
    },
    {
      "transform": [
        {
          "filter": "Year_selection == 2020"
        }
      ],
      "mark": {
        "type": "text",
        "align": "left",
        "dx": 5,
        "dy": -5,
        "color": "red"
      },
      "encoding": {
        "x": {
          "datum": "April",
          "type": "ordinal"
        },
        "y": {
          "datum": 10000000,
          "type": "quantitative"
        },
        "text": {
          "value": "Migration went down due to COVID-19"
        }
      }
    }
  ]
}
