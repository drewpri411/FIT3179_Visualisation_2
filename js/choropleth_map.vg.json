{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Migration to Malaysia Per 1,000 People (2020-2024)",
  "width": "container",
  "height": 400,
  "projection": {"type": "equalEarth"},
  "params": [
    {
      "name": "yearSelector",
      "value": 2020,
      "bind": {
        "input": "range",
        "min": 2020,
        "max": 2024,
        "step": 1,
        "name": "Select Year: "
      }
    }
  ],
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/drewpri411/FIT3179_W9_HW/main/js/ne_110m_new.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {
          "calculate": "'No migration data available for ' + datum.properties.NAME",
          "as": "note"
        }
      ],
      "mark": {
        "type": "geoshape",
        "fill": "#ddd",
        "stroke": "white",
        "strokeWidth": 1
      },
      "encoding": {
        "tooltip": {"field": "note"}
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
        "format": {"type": "topojson", "feature": "oceans"}
      },
      "mark": {"type": "geoshape", "fill": "skyblue"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/drewpri411/FIT3179_Visualisation_2/main/js/ne_110m_new.topojson",
        "format": {"type": "topojson", "feature": "countries"}
      },
      "transform": [
        {
          "lookup": "properties.ISO_A3",
          "from": {
            "data": {
              "url": "data/world_map_arrival_data.csv",
              "format": {"type": "csv"}
            },
            "key": "ISO3_code",
            "fields": ["2020", "2021", "2022", "2023", "2024"]
          }
        },
        {
          "calculate": "datum[yearSelector]", 
          "as": "MigrationPer1000"
        }
      ],
      "mark": {"type": "geoshape"},
      "encoding": {
        "color": {
          "field": "MigrationPer1000",
          "type": "quantitative",
          "scale": {
            "type": "linear",
            "domain": [0, 1000, 10000, 100000, 1000000],
            "range": ["#ffffb2", "#fecc5c", "#fd8d3c", "#f03b20", "#bd0026"]
          },
          "legend": {
            "title": "Migration Per 1,000 People"
          }
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {
            "field": "MigrationPer1000",
            "type": "quantitative",
            "title": "Migration Per 1,000 People",
            "format": ",.0f"
          }
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/drewpri411/FIT3179_W9_HW/main/js/ne_110m_new.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {
        "type": "geoshape",
        "stroke": "lightgray", 
        "strokeWidth": 0.5,
        "fill": null 
      }
    }
  ]
}
